<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical" android:layout_margin="8dip">

        <LinearLayout
            android:id="@+id/lay_idea_fouce"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="8dip" android:background="#ffffff">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:layout_weight="0.5"
                    android:gravity="center" android:layout_marginBottom="8dip">

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:gravity="center" android:layout_weight="0.5">

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:layout_marginRight="8dip"
                            android:background="@drawable/button_send"
                            android:text="جستجو"
                            android:textColor="#ffffff"
                            android:textSize="17dip" android:layout_marginLeft="8dip"/>

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentTop="false"
                            android:layout_alignRight="@+id/btn_search"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dip"
                            android:src="@drawable/searchh" 
                            />

                        <ImageView
                            android:id="@+id/img_arrow"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_alignLeft="@+id/btn_search"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:src="@drawable/arrowdu" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:gravity="center" android:layout_weight="0.5">

                        <Button
                            android:id="@+id/btn_shhar"
                            android:layout_width="fill_parent"
                            android:layout_height="45dip"
                            android:layout_marginLeft="8dip"
                            android:layout_marginRight="8dip"
                            android:layout_weight="0.5"
                            android:background="@drawable/button_send"
                            android:gravity="right|center"
                            android:hint="انتخاب شهر"
                            android:textSize="17dip" android:textColorHint="#ffffff" android:textColor="#ffffff"/>

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginLeft="5dip"
                            android:src="@drawable/arrowdu" android:layout_alignLeft="@id/btn_shhar" android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#Ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="4dip"
                        android:background="@drawable/selector"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="نام"
                        android:imeOptions="actionNext"
                        android:inputType="text|textPersonName"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textSize="17dip" android:layout_weight="1">

                        <requestFocus />
                    </EditText>

                    <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                        android:id="@+id/NewControlTextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#00BCD4"
                        android:textSize="13dip"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/edt_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="4dip"
                        android:layout_weight="1"
                        android:background="@drawable/selector"
                        android:ems="10"
                        android:gravity="right"
                        android:hint="فامیلی"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textSize="17dip" />

                    <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                        android:id="@+id/NewControlTextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#00BCD4"
                        android:textSize="13dip"
                        android:visibility="visible" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="4dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="4dip"
                    android:background="@drawable/selector"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="آدرس (اختیاری)"
                    android:imeOptions="actionSearch"
                    android:textSize="17dip" android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lst_main"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_weight="0.5"
        android:cacheColorHint="@null"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:drawable="@android:color/transparent"
        android:duplicateParentState="true"
        android:focusable="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/txt_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:visibility="gone" android:gravity="center">

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="موردی یافت نشد :("
            android:textColor="#000000"
            android:textSize="18dip"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_go_help"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/button_help"
            android:text="مطالعه راهنما و نحوه جستجو"
            android:textColor="#ffffff"
            android:textSize="15dip" />

    </LinearLayout>

</LinearLayout>