<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#dcdcdc">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="#3498DB"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent" android:layout_weight="0.5" android:gravity="left|center">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="20dip"
                android:scaleType="centerInside"
                android:src="@drawable/main_page" />

            <ImageView
                android:id="@+id/img_noti"
                android:layout_width="20dip"
                android:layout_height="wrap_content"
                android:src="@drawable/env" android:layout_marginLeft="20dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent" android:layout_weight="0.5" android:gravity="right|center">

            <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                android:id="@+id/txt_head_actionbar_sendidea"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="درباره ما"
                android:textColor="#Ffffff" android:layout_marginRight="8dip"/>

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:scaleType="centerInside"
                android:src="@drawable/menuu" android:layout_marginLeft="4dip" android:layout_marginRight="16dip"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="6dip"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/lay_idea_fouce"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                android:id="@+id/newControlTextView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:gravity="right"
                android:lineSpacingExtra="10dp"
                android:singleLine="false"
                android:text="@string/about"
                android:textColor="#0A1F3B" android:textSize="16dip"/>

            <LinearLayout
                android:id="@+id/lay_web_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="#EEEEEE"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_arrow_faq"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/arrows_faq_r" android:layout_marginBottom="16dip" android:layout_marginTop="16dip"/>

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView06"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:gravity="right|center"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="@string/web"
                    android:textColor="#3498DB" android:textSize="15dip"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="8dip"
                    android:layout_height="fill_parent"
                    android:src="#3498DB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_email_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="4dip"
                android:background="#EEEEEE"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="16dip"
                    android:src="@drawable/arrows_faq_r" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:gravity="right|center"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="@string/email"
                    android:textColor="#3498DB" android:textSize="15dip"/>

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="8dip"
                    android:layout_height="fill_parent"
                    android:src="#3498DB" />
            </LinearLayout>

            <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                android:id="@+id/NewControlTextView02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:gravity="right"
                android:lineSpacingExtra="10dp"
                android:singleLine="false"
                android:text="کانال های تلگرام"
                android:textColor="#0A1F3B" />

            <LinearLayout
                android:id="@+id/lay_tel1_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="#EEEEEE"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="16dip"
                    android:src="@drawable/arrows_faq_r" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:gravity="right|center"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="اطلاع‌رسانی در خصوص فعالیتها و مشتریان شرکت "
                    android:textColor="#3498DB" android:textSize="13dip"/>

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="8dip"
                    android:layout_height="fill_parent"
                    android:src="#3498DB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tel2_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="4dip"
                android:background="#EEEEEE"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView06"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="16dip"
                    android:src="@drawable/arrows_faq_r" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView04"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:gravity="right|center"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="فعالیتهای دپارتمان توسعه نرم‌افزار شرکت"
                    android:textColor="#3498DB" android:textSize="14dip"/>

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="8dip"
                    android:layout_height="fill_parent"
                    android:src="#3498DB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_tel3_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="#EEEEEE"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView08"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="16dip"
                    android:src="@drawable/arrows_faq_r" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:gravity="right|center"
                    android:lineSpacingExtra="10dp"
                    android:singleLine="false"
                    android:text="کانال آشنایی با شرکت های نوپا و دانش بنیان"
                    android:textColor="#3498DB"
                    android:textSize="14dip" />

                <ImageView
                    android:id="@+id/ImageView07"
                    android:layout_width="8dip"
                    android:layout_height="fill_parent"
                    android:src="#3498DB" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>