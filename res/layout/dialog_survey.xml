<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#555555"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_margin="4dip"
                android:src="@drawable/inte" />

            <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                android:id="@+id/txt_header_conected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dip"
                android:gravity="right|center"
                android:text="نظرسنجی"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:src="#dcdcdc" />

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_message_conected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="کاربر گرامی تشکر از حضور شما، از عملکرد این برنامه تا چه اندازه ای راضی هستید؟"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dip" android:singleLine="false"/>

        <LinearLayout
            android:id="@+id/lay_menu_search"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.86"
            android:background="#555555"
            android:gravity="right|center"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/lay_very_good"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:gravity="right|center" >

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/txt_name_sha_search"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:gravity="right"
                    android:text="عالی"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#aaaaaa"
                    android:textSize="13dip" android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/img_very_goood"
                    android:layout_width="22dip"
                    android:layout_height="32dip"
                    android:layout_margin="8dip"
                    android:src="@drawable/ppp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_good"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:gravity="right|center" >

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/txtsn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dip"
                    android:gravity="right"
                    android:text="خوب"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#aaaaaa"
                    android:textSize="13dip" />

                <ImageView
                    android:id="@+id/img_goood"
                    android:layout_width="22dip"
                    android:layout_height="32dip"
                    android:layout_margin="8dip"
                    android:src="@drawable/ppp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_not_bad"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:gravity="right|center" >

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/txt_loc_search"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:gravity="right"
                    android:text="متوسط"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#aaaaaa"
                    android:textSize="13dip" />

                <ImageView
                    android:id="@+id/img_not_bad"
                    android:layout_width="22dip"
                    android:layout_height="32dip"
                    android:layout_margin="8dip"
                    android:src="@drawable/ppp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_weak"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:gravity="right|center" >

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:gravity="right"
                    android:text="ضعیف"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#aaaaaa"
                    android:textSize="13dip" />

                <ImageView
                    android:id="@+id/img_weak"
                    android:layout_width="22dip"
                    android:layout_height="32dip"
                    android:layout_margin="8dip"
                    android:src="@drawable/ppp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginRight="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_conect"
                android:text="خروج"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginRight="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_conect"
                android:text="ثبت"
                android:textColor="#ffffff"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>