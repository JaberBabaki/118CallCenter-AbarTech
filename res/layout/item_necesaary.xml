<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="vertical" android:background="#ffffff">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_margin="3dip"
            android:layout_weight="0.4"
            android:orientation="vertical" android:gravity="center">

            <LinearLayout
                android:id="@+id/add_contact"
                android:layout_width="fill_parent"
                android:layout_height="70dip"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_arrow_faq"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/call_nes" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                        android:id="@+id/txt_title"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="4dip"
                        android:layout_marginRight="4dip"
                        android:layout_marginTop="2dip"
                        android:gravity="right|center"
                        android:singleLine="false"
                        android:text="اضافه کردن"
                        android:textColor="#203664"
                        android:textSize="14dip" android:layout_weight="0.5"/>

                    <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                        android:id="@+id/txt_number_nec"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="4dip"
                        android:layout_marginRight="4dip"
                        android:layout_marginTop="2dip"
                        android:layout_weight="0.5"
                        android:gravity="right|center"
                        android:singleLine="false"
                        android:text="اضافه کردن"
                        android:textColor="#203664"
                        android:textSize="14dip" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="4dip"
            android:layout_weight="0.4"
            android:src="#3498DB" />

    </LinearLayout>

</LinearLayout>