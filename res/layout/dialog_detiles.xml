<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#555555"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_margin="4dip"
                android:src="@drawable/infow" />

            <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                android:id="@+id/txt_header_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dip"
                android:gravity="right|center"
                android:text="نمایش اطلاعات"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:src="#dcdcdc" />

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_name_detils"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13dip"
            android:visibility="visible" />

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_phone_detiles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13dip"
            android:visibility="visible" />

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_address_detils"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="13dip"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:src="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.33" android:padding="4dip">

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="20dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dip"
                    android:src="@drawable/social_w" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:text="ارسال کردن"
                    android:textColor="#ffffff"
                    android:textSize="10dip" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="1dip"
                android:src="#dcdcdc" android:layout_height="fill_parent"/>

            <LinearLayout
                android:id="@+id/call"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:layout_weight="0.33" android:padding="4dip">

                <ImageView
                    android:id="@+id/img_delete_adapter"
                    android:layout_width="20dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:src="@drawable/telephone_w" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="1dip"
                    android:layout_marginRight="1dip"
                    android:gravity="center"
                    android:text="تماس گرفتن"
                    android:textColor="#ffffff"
                    android:textSize="10dip" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:src="#dcdcdc" />

            <LinearLayout
                android:id="@+id/add_contact"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="1dip"
                android:layout_weight="0.33" android:padding="4dip">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:src="@drawable/people_w" />

                <abartech.mobile.callcenter118.CustomControl.NewControlTextView
                    android:id="@+id/NewControlTextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:gravity="center"
                    android:text="اضافه کردن"
                    android:textColor="#ffffff"
                    android:textSize="10dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginLeft="2dip"
                android:layout_weight="1"
                android:background="@drawable/button_send_conect"
                android:text="بازگشت"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>