<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" android:background="#555555">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_margin="4dip"
                android:src="@drawable/war" />

            <TextView
                android:id="@+id/txt_header_conected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dip"
                android:text="حذف اعلامیه"
                android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="right|center" android:textSize="16dip"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:src="#dcdcdc" android:layout_marginLeft="8dip" android:layout_marginRight="8dip"/>

        <abartech.mobile.callcenter118.CustomControl.NewControlTextView
            android:id="@+id/txt_message_conected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="آیا از حذف این اعلامیه مطمئن هستید؟"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="16dip" android:layout_margin="8dip" android:layout_gravity="center" android:gravity="right"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginRight="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_conect"
                android:text="بازگشت"
                android:textColor="#ffffff"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_delete_ok"
                android:layout_width="0dip"
                android:layout_height="48dip"
                android:layout_marginLeft="2dip"
                android:layout_weight="0.5"
                android:background="@drawable/button_send_conect"
                android:text="حذف"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>